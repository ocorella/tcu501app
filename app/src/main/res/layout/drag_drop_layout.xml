<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Drag and drop the correct icons!"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2">


        <LinearLayout
            android:background="@drawable/shape"

            android:id="@+id/topleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <ImageButton
                android:id="@+id/soundtopleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:layout_gravity="bottom|right"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/cartoon_girl"
                android:layout_gravity="bottom"
                android:foregroundGravity="bottom"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topright"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/shape">


            <ImageButton
                android:id="@+id/soundtopright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:layout_gravity="bottom|right"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/boy_cartoon"
                android:layout_gravity="bottom"
                android:foregroundGravity="bottom"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2">

        <LinearLayout
            android:id="@+id/bottomleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/shape">



            <ImageButton
                android:id="@+id/soundbottomleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:layout_gravity="bottom|right"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/boy_cartoon"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"

                android:foregroundGravity="bottom"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomright"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/shape">




            <ImageButton
                android:id="@+id/soundbottomright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:layout_gravity="bottom|right"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/cartoon_girl"
                android:layout_gravity="bottom"
                android:foregroundGravity="bottom"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2">

        <LinearLayout
            android:id="@+id/fivelayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/shape">



            <ImageButton
                android:id="@+id/fivesound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:layout_gravity="bottom|right"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/boy_cartoon"
                android:layout_gravity="bottom"
                android:foregroundGravity="bottom"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sixlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/shape">




            <ImageButton
                android:id="@+id/sixsound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:layout_gravity="bottom|right"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/cartoon_girl"
                android:layout_gravity="bottom"
                android:foregroundGravity="bottom"/>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:gravity="center"
        android:id="@+id/bottomall"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@drawable/shape"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:orientation="horizontal">





        <ImageView
            android:id="@+id/myimage6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/washhands" />

        <ImageView
            android:id="@+id/myimage5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/soccer" />

        <ImageView
            android:id="@+id/myimage7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/junkfoodno" />


            <ImageView
                android:id="@+id/myimage1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/book" />

            <ImageView
                android:id="@+id/myimage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cat" />













    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/bottomall2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@drawable/shape"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/myimage2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/reading" />

        <ImageView
            android:id="@+id/myimage4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/chef" />





    </LinearLayout>




</LinearLayout>
